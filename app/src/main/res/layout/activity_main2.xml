<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="@color/black"
    >

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        app:lottie_loop="true"
        android:id="@+id/skate"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/skate"

        />

    <EditText
        android:id="@+id/your_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:textColor="@color/white"
        android:hint="Your name"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/crush_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/your_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:textColor="@color/white"
        android:hint="Crush Name"
        android:textColorHint="@color/white"
        android:textStyle="bold"


        android:textSize="25dp" />

    <Button
        android:id="@+id/btn_Tap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/crush_name"
        android:layout_centerInParent="true"
        android:layout_marginTop="129dp"
        android:backgroundTint="@color/teal_200"
        android:text="Tap"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Tap_to_get_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_Tap"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:text="Tap to get score"
        style="@style/TextAppearance.AppCompat.Headline"
        android:textStyle="bold"
        />
</RelativeLayout>